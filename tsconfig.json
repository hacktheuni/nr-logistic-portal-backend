{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true
  },

  "include": ["src"], 
  "exclude": ["node_modules"]
}
